<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    style="@style/Layout_Match_Match">

    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp85"
        android:layout_alignParentBottom="true"
        android:background="#656367"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bottom"
            android:layout_width="@dimen/dp40"
           android:layout_height="@dimen/dp40"
            android:src="@mipmap/icon_login_logo" />

        <TextView
            style="@style/Layout_Wrap_Wrap"
            android:layout_marginTop="@dimen/dp5"
            android:text="Copyright © 2019 Fish.  All Rights Reserved."
            android:textColor="#c9cacc"
            android:textSize="@dimen/sp11" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_advertise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom"
        android:scaleType="centerCrop"
        android:src="@color/main_color_new"/>

    <TextView
        android:id="@+id/tv_count_down"
        style="@style/Layout_Wrap_Wrap"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp120"
        android:background="@drawable/bg_oval_translucence"
        android:paddingLeft="@dimen/dp18"
        android:paddingTop="@dimen/dp8"
        android:paddingRight="@dimen/dp18"
        android:paddingBottom="@dimen/dp8"
        android:text="跳过"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp12" />
</RelativeLayout>
