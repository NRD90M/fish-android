<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dp100"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp35"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp7"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp12"
            android:layout_height="@dimen/dp12"
            android:rotation="270"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp18"
            android:background="@drawable/layer_triangle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_common_black"
            android:padding="@dimen/dp12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_add_scene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加鱼塘"
                android:textSize="@dimen/sp14"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>

            <View style="@style/divider_05"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp9"
                android:layout_marginTop="@dimen/dp9"/>

            <TextView
                android:id="@+id/tv_remove_scene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鱼塘配置"
                android:textSize="@dimen/sp14"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>

            <View style="@style/divider_05"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp9"
                android:layout_marginTop="@dimen/dp9"/>

            <TextView
                android:id="@+id/tv_rename_scene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鱼塘重命名"
                android:textSize="@dimen/sp14"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>