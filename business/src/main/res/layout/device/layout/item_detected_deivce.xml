<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp16"
    android:layout_marginTop="@dimen/dp10"
    android:layout_marginRight="@dimen/dp16"
    android:background="@drawable/bg_detected_device_item"
    android:paddingLeft="@dimen/dp13"
    android:paddingTop="@dimen/dp15"
    android:paddingRight="@dimen/dp13"
    android:paddingBottom="@dimen/dp15">

    <ImageView
        android:id="@+id/iv_device"
        android:layout_width="@dimen/dp43"
        android:layout_height="@dimen/dp43"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp11"
        android:src="@mipmap/ic_detected_device_new" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/Layout_Wrap_Wrap"
        android:layout_toRightOf="@+id/iv_device"
        android:text="HOME8"
        android:textColor="@color/common_222222"
        android:textSize="@dimen/sp17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_bake"
        style="@style/Layout_Wrap_Wrap"
        android:layout_toRightOf="@+id/tv_name"
        android:text="备注名"
        android:textColor="@color/common_222222"
        android:textSize="@dimen/sp17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_rename"
        android:layout_width="@dimen/dp48"
        android:layout_height="@dimen/dp23"
        android:layout_marginRight="@dimen/dp15"
        android:layout_toLeftOf="@+id/iv_remove"
        android:background="@drawable/bg_device_detail_function_new"
        android:gravity="center"
        android:text="重命名"
        android:textColor="@color/white"
        android:textSize="@dimen/sp11"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_amy"
        style="@style/Layout_Wrap_Wrap"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/dp5"
        android:layout_toRightOf="@+id/iv_device"
        android:text="按摩椅"
        android:textColor="@color/common_969696"
        android:textSize="@dimen/sp14"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_macAddress"
        style="@style/Layout_Wrap_Wrap"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/dp5"
        android:layout_toRightOf="@+id/iv_device"
        android:text="按摩椅编号:F0D834A1E0G3"
        android:textColor="@color/common_969696"
        android:textSize="@dimen/sp13"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_remove"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon_home_arrow" />
</RelativeLayout>
