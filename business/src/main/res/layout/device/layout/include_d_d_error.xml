<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_d_d_error"
    style="@style/Layout_Match_Match"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dp135"
        android:layout_height="@dimen/dp135"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp50"
        android:src="@mipmap/ic_d_d_error" />

    <TextView
        style="@style/Layout_Wrap_Wrap"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp35"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:text="设备连接已断开，\n是否需要重连？"
        android:textColor="@color/main_color"
        android:textSize="@dimen/dp18" />

    <LinearLayout
        style="@style/Layout_Wrap_Wrap"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp35"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_error_retry"
            style="@style/common_small_btn"
            android:layout_marginRight="@dimen/dp25"
            android:background="@drawable/bg_common_btn_normal_main_color"
            android:text=" 重连 "
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/tv_error_exit"
            style="@style/common_small_btn"
            android:layout_marginLeft="@dimen/dp25"
            android:text=" 退出 "
            android:textSize="@dimen/sp16" />

    </LinearLayout>
</LinearLayout>