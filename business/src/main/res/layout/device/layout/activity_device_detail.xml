<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Layout_Match_Match"
    android:orientation="vertical">

    <include layout="@layout/include_device_detail_header" />

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp33"
        android:background="@color/main_color"
        app:stl_defaultTabTextColor="@android:color/white"
        app:stl_defaultTabTextSize="@dimen/sp13"
        app:stl_distributeEvenly="true"
        app:stl_dividerColor="@android:color/white"
        app:stl_dividerThickness="@dimen/dp0"
        app:stl_indicatorColor="@android:color/white"
        app:stl_indicatorCornerRadius="@dimen/dp2"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="@dimen/dp2"
        app:stl_indicatorWidth="@dimen/dp100"
        app:stl_indicatorWithoutPadding="true"
        app:stl_overlineThickness="0dp"
        app:stl_underlineThickness="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"
        android:background="@color/main_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        style="@style/Layout_Match_Match" />

</LinearLayout>