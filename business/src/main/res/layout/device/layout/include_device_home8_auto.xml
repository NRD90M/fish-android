            android:gravity="center">

            <ImageView
                android:id="@+id/iv_Shangwuxiuxian"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sl_bg_auto_shangwuxiuxian_btn" />

            <TextView
                android:id="@+id/tv_Shangwuxiuxian"
                style="@style/Layout_Wrap_Wrap"
                android:layout_below="@+id/iv_Shangwuxiuxian"
                android:layout_centerHorizontal="true"
                android:text="商务休闲"
                android:textColor="@color/bg_device_detail_top"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/Layout_Match_Wrap"
        android:layout_height="@dimen/dp110"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginTop="@dimen/dp0"
        android:layout_marginRight="@dimen/dp4"
        android:layout_marginBottom="@dimen/dp0"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_Qianyinlashen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sl_bg_auto_btn"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_Qianyinlashen"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
