<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout_Match_Match"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Layout_Match_Wrap"
        android:layout_height="@dimen/dp110"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginRight="@dimen/dp4"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_Jianjinghuli"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sl_bg_auto_btn"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_Jianjinghuli"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sl_bg_auto_jianjinghuli_btn" />

            <TextView
                android:id="@+id/tv_Jianjinghuli"
                style="@style/Layout_Wrap_Wrap"
                android:layout_below="@+id/iv_Jianjinghuli"
                android:layout_centerHorizontal="true"
                android:text="肩颈护理"
                android:textColor="@color/bg_device_detail_top"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_Yaobushuhuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp0"
            android:layout_weight="1"
            android:background="@drawable/sl_bg_auto_btn"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_Yaobushuhuan"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sl_bg_auto_yaobushuhuan_btn" />

            <TextView
                android:id="@+id/tv_Yaobushuhuan"
                style="@style/Layout_Wrap_Wrap"
                android:layout_below="@+id/iv_Yaobushuhuan"
                android:layout_centerHorizontal="true"
                android:text="腰背舒缓"
                android:textColor="@color/bg_device_detail_top"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_Tunbusuxing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp0"
            android:layout_weight="1"
            android:background="@drawable/sl_bg_auto_btn"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_Tunbusuxing"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sl_bg_auto_tunbusuxing_btn" />

            <TextView
                android:id="@+id/tv_Tunbusuxing"
                style="@style/Layout_Wrap_Wrap"
                android:layout_below="@+id/iv_Tunbusuxing"
                android:layout_centerHorizontal="true"
                android:text="臀部塑形"
                android:textColor="@color/bg_device_detail_top"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/Layout_Match_Wrap"
        android:layout_height="@dimen/dp110"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginTop="@dimen/dp0"
        android:layout_marginRight="@dimen/dp4"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_Huanjiefangsong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sl_bg_auto_btn"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_Huanjiefangsong"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sl_bg_auto_huanjiefangsong_btn" />

            <TextView
                android:id="@+id/tv_Huanjiefangsong"
                style="@style/Layout_Wrap_Wrap"
                android:layout_below="@+id/iv_Huanjiefangsong"
                android:layout_centerHorizontal="true"
                android:text="缓解放松"
                android:textColor="@color/bg_device_detail_top"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_Huolihuifu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp0"
            android:layout_weight="1"
            android:background="@drawable/sl_bg_auto_btn"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_Huolihuifu"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sl_bg_auto_huolihuifu_btn" />

            <TextView
                android:id="@+id/tv_Huolihuifu"
                style="@style/Layout_Wrap_Wrap"
                android:layout_below="@+id/iv_Huolihuifu"
                android:layout_centerHorizontal="true"
                android:text="活力恢复"
                android:textColor="@color/bg_device_detail_top"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_Zhumianxiuyang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp0"
            android:layout_weight="1"
            android:background="@drawable/sl_bg_auto_btn"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_Zhumianxiuyang"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sl_bg_auto_zhumianxiuyang_btn" />

            <TextView
                android:id="@+id/tv_Zhumianxiuyang"
                style="@style/Layout_Wrap_Wrap"
                android:layout_below="@+id/iv_Zhumianxiuyang"
                android:layout_centerHorizontal="true"
                android:text="助眠修养"
                android:textColor="@color/bg_device_detail_top"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/Layout_Match_Wrap"
        android:layout_height="@dimen/dp110"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginTop="@dimen/dp0"
        android:layout_marginRight="@dimen/dp4"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_Zhijianhuanxing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sl_bg_auto_btn"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_Zhijianhuanxing"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_centerHorizontal="true"
