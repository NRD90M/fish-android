                android:text="牵引拉伸"
                android:textColor="@color/bg_device_detail_top"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp0"
            android:layout_weight="1"
            android:background="@drawable/bg_device_detail_function"
            android:paddingLeft="@dimen/dp7"
            android:paddingTop="@dimen/dp7"
            android:paddingBottom="@dimen/dp7"
            android:visibility="invisible">

            <ImageView
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15" />

            <ImageView
                android:id="@+id/iv_Kong01"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_device_detail_technique_entrance" />

            <TextView
                style="@style/Layout_Wrap_Wrap"
                android:layout_below="@+id/iv_Kong01"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp10"
                android:text="空"
                android:textColor="@color/bg_device_item_main_color"
                android:textSize="@dimen/sp14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp0"
            android:layout_weight="1"
            android:background="@drawable/bg_device_detail_function"
            android:paddingLeft="@dimen/dp7"
            android:paddingTop="@dimen/dp7"
            android:paddingBottom="@dimen/dp7"
            android:visibility="invisible">

            <ImageView
