<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp90"
    android:layout_marginLeft="@dimen/dp10"
    android:layout_marginTop="@dimen/dp10"
    android:layout_marginRight="@dimen/dp10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_bottom_power"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp90"
            android:layout_weight="1"
            android:background="@drawable/bg_device_detail_t100_open01"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_bottom_power"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_device_detail_t100_power_u" />

            <TextView
                android:id="@+id/tv_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_bottom_power"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp6"
                android:text="启动"
                android:textColor="@color/white"
                android:textSize="@dimen/sp13" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp90"
            android:layout_weight="3"
            android:background="@drawable/bg_device_detail_t100_open02">

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp23"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="@dimen/sp22"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp20"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_t100_iv"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_gif"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp20"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_t100_g"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
