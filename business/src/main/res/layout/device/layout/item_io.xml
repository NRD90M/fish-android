<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_margin="@dimen/dp6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_common_white"
    android:orientation="vertical"
    android:padding="@dimen/dp10">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp48"
        android:layout_height="@dimen/dp30"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon_main_aerator" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="增氧机"
        android:textColor="@color/main_text"
        android:textSize="@dimen/sp15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp3"
        android:gravity="center"
        android:text="15:20:30"
        android:textColor="@color/main_text"
        android:textSize="@dimen/sp15"
        android:visibility="gone" />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/sb_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp12"
        android:checked="false"
        android:textColor="@drawable/sl_asr_text_state"
        android:textSize="@dimen/dp10"
        app:kswTextOff="禁用"
        app:kswTextOn="启用"
        app:kswThumbHeight="@dimen/dp22"
        app:kswThumbMargin="@dimen/dp5"
        app:kswThumbWidth="@dimen/dp30"
        app:kswTintColor="@color/main_color_new" />
</LinearLayout>
