<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp16"
    android:layout_marginTop="@dimen/dp10"
    android:layout_marginRight="@dimen/dp16"
    android:background="@drawable/bg_common_white"
    android:orientation="vertical"
    android:padding="@dimen/dp10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp30"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_main_aerator" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/iv_icon"
            android:text="增氧机"
            android:textColor="@color/common_161717"
            android:textSize="@dimen/sp15" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:textColor="@drawable/sl_asr_text_state"
            android:textSize="@dimen/dp10"
            app:kswTextOff="禁用"
            app:kswTextOn="启用"
            app:kswThumbHeight="@dimen/dp20"
            app:kswThumbMargin="@dimen/dp5"
            app:kswThumbWidth="@dimen/dp28"
            app:kswTintColor="@color/main_color_new" />
    </RelativeLayout>

    <View
        style="@style/divider_05"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:weightSum="5"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_rename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp5"
                android:background="@drawable/bg_line_grey"
                android:gravity="center"
                android:text="重命名"
                android:textColor="@color/common_CACBCC"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_checkFeeder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp5"
                android:background="@drawable/bg_line_blue"
                android:gravity="center"
                android:text="校准投放量"
                android:textColor="@color/main_color_blue"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setPower"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp5"
                android:background="@drawable/bg_line_blue"
                android:gravity="center"
                android:text="设置电量消耗"
                android:textColor="@color/main_color_blue"
                android:textSize="@dimen/sp14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
