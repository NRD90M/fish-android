<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout_Match_Match"
    android:orientation="vertical">

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/dp05"-->
    <!--android:background="@color/bg_device_item_main_color" />-->

    <RelativeLayout style="@style/device_detail_more_function1_rl">

        <ImageView
            android:id="@+id/iv_more_func_air_intensity_add"
            style="@style/device_detail_more_function1_iv_add" />

        <LinearLayout style="@style/device_detail_more_function1_ll1">

            <TextView
                style="@style/device_detail_more_function1_tv"
                android:text="气囊强度" />

            <TextView
                android:id="@+id/tv_more_func_air_intensity"
                style="@style/device_detail_more_function1_tv2"
                tools:text="3档" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_more_func_air_intensity_minus"
            style="@style/device_detail_more_function1_iv_minus" />

    </RelativeLayout>

    <RelativeLayout style="@style/device_detail_more_function1_rl">

        <ImageView
            android:id="@+id/iv_more_func_3d_strength_add"
            style="@style/device_detail_more_function1_iv_add" />

        <LinearLayout style="@style/device_detail_more_function1_ll1">

            <TextView
                style="@style/device_detail_more_function1_tv"
                android:text="3D力度" />

            <TextView
                android:id="@+id/tv_more_func_3d_strength"
                style="@style/device_detail_more_function1_tv2"
                tools:text="5档" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_more_func_3d_strength_minus"
            style="@style/device_detail_more_function1_iv_minus" />

    </RelativeLayout>

    <LinearLayout style="@style/device_detail_more_function2_ll">

        <com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView
            android:id="@+id/rl_more_func_back_up"
            style="@style/device_detail_more_function2_rl_left">

            <ImageView
                android:id="@+id/iv_device_detail_more_func_back_up"
                style="@style/device_detail_more_function1_iv_add" />

            <TextView
                style="@style/device_detail_more_function2_rl_tv_left"
                android:layout_toRightOf="@+id/iv_device_detail_more_func_back_up"
                android:text="靠背升" />

        </com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView>

        <com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView
            android:id="@+id/rl_more_func_back_down"
            style="@style/device_detail_more_function2_rl_right">

            <ImageView
                android:id="@+id/iv_device_detail_more_func_back_down"
                style="@style/device_detail_more_function1_iv_minus" />

            <TextView
                style="@style/device_detail_more_function2_rl_tv_right"
                android:layout_toLeftOf="@+id/iv_device_detail_more_func_back_down"
                android:text="靠背降" />
        </com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView>
    </LinearLayout>

    <LinearLayout style="@style/device_detail_more_function2_ll">

        <com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView
            android:id="@+id/rl_more_func_leg_up"
            style="@style/device_detail_more_function2_rl_left">

            <ImageView
                android:id="@+id/iv_device_detail_more_func_leg_up"
                style="@style/device_detail_more_function1_iv_add" />

            <TextView
                style="@style/device_detail_more_function2_rl_tv_left"
                android:layout_toRightOf="@+id/iv_device_detail_more_func_leg_up"
                android:text="脚部升" />

        </com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView>

        <com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView
            android:id="@+id/rl_more_func_leg_down"
            style="@style/device_detail_more_function2_rl_right">

            <ImageView
                android:id="@+id/iv_device_detail_more_func_leg_down"
                style="@style/device_detail_more_function1_iv_minus" />

            <TextView
                style="@style/device_detail_more_function2_rl_tv_right"
                android:layout_toLeftOf="@+id/iv_device_detail_more_func_leg_down"
                android:text="脚部降" />
        </com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView>
    </LinearLayout>

    <LinearLayout style="@style/device_detail_more_function2_ll">

        <com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView
            android:id="@+id/rl_more_func_leg_stretch"
            style="@style/device_detail_more_function2_rl_left">

            <ImageView
                android:id="@+id/iv_device_detail_more_func_leg_stretch"
                style="@style/device_detail_more_function1_iv_add" />

            <TextView
                style="@style/device_detail_more_function2_rl_tv_left"
                android:layout_toRightOf="@+id/iv_device_detail_more_func_leg_stretch"
                android:text="脚部伸" />

        </com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView>

        <com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView
            android:id="@+id/rl_more_func_leg_tuck"
            style="@style/device_detail_more_function2_rl_right">

            <ImageView
                android:id="@+id/iv_device_detail_more_func_leg_tuck"
                style="@style/device_detail_more_function1_iv_minus" />

            <TextView
                style="@style/device_detail_more_function2_rl_tv_right"
                android:layout_toLeftOf="@+id/iv_device_detail_more_func_leg_tuck"
                android:text="脚部缩" />

        </com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView>
    </LinearLayout>

    <LinearLayout style="@style/device_detail_more_function3_ll">

        <RelativeLayout
            android:id="@+id/rl_more_func_jiao_gun"
            style="@style/device_detail_more_function2_rl_left">

            <ImageView
                android:id="@+id/iv_device_detail_more_func_jiao_gun"
                style="@style/device_detail_more_function1_iv_add"
                android:src="@mipmap/ic_device_detail_more_func_jiao_gun" />

            <TextView
                style="@style/device_detail_more_function2_rl_tv_left"
                android:layout_toRightOf="@+id/iv_device_detail_more_func_jiao_gun"
                android:text="脚滚" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_more_func_tui_gun"
            style="@style/device_detail_more_function2_rl_right">

            <ImageView
                android:id="@+id/iv_device_detail_more_func_tui_gun"
                style="@style/device_detail_more_function1_iv_minus"
                android:src="@mipmap/ic_device_detail_more_func_tui_gun" />

            <TextView
                style="@style/device_detail_more_function2_rl_tv_right"
                android:layout_toLeftOf="@+id/iv_device_detail_more_func_tui_gun"
                android:text="腿滚" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout style="@style/device_detail_more_function3_ll">

        <RelativeLayout
            android:id="@+id/rl_more_func_jia_re"
            style="@style/device_detail_more_function2_rl_left">

            <ImageView
                android:id="@+id/iv_device_detail_more_func_jia_re"
                style="@style/device_detail_more_function1_iv_add"
                android:src="@mipmap/ic_device_detail_more_func_heat" />

            <TextView
                style="@style/device_detail_more_function2_rl_tv_left"
                android:layout_toRightOf="@+id/iv_device_detail_more_func_jia_re"
                android:text="加热" />

        </RelativeLayout>

        <RelativeLayout
            style="@style/device_detail_more_function2_rl_right"
            android:visibility="invisible">
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>