<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout_Match_Match"
    android:layout_marginTop="@dimen/dp20"
    android:layout_marginBottom="@dimen/dp67"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Layout_Match_Wrap"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_main_function_auto_mode"
            style="@style/device_detail_main_function_item_ll"
            android:layout_marginRight="@dimen/dp35">

            <ImageView
                style="@style/device_detail_main_function_item_iv"
                android:src="@mipmap/ic_device_detail_auto_mode_entrance" />

            <TextView
                style="@style/device_detail_main_function_item_tv"
                android:text="自动模式" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_function_technique"
            style="@style/device_detail_main_function_item_ll">

            <ImageView
                style="@style/device_detail_main_function_item_iv"
                android:src="@mipmap/ic_device_detail_technique_entrance" />

            <TextView
                style="@style/device_detail_main_function_item_tv"
                android:text="手法选择" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/Layout_Match_Wrap"
        android:layout_marginTop="@dimen/dp35"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_main_function_zero_gravity"
            style="@style/device_detail_main_function_item_ll"
            android:layout_marginRight="@dimen/dp35">

            <ImageView
                style="@style/device_detail_main_function_item_iv"
                android:src="@mipmap/ic_device_detail_zero_gravity_entrance" />

            <TextView
                style="@style/device_detail_main_function_item_tv"
                android:text="零重力" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_function_body_part"
            style="@style/device_detail_main_function_item_ll">

            <ImageView
                style="@style/device_detail_main_function_item_iv"
                android:src="@mipmap/ic_device_detail_body_part_entrance" />

            <TextView
                style="@style/device_detail_main_function_item_tv"
                android:text="部位切换" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>