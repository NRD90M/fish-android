<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout_Match_Match"
    android:layout_marginLeft="@dimen/dp10"
    android:layout_marginTop="@dimen/dp10"
    android:layout_marginRight="@dimen/dp10"
    android:layout_marginBottom="@dimen/dp10"
    android:background="@drawable/bg_device_detail_t100_main"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Layout_Match_Match"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollview_shoudong"
            style="@style/Layout_Match_Match"
            android:scrollbars="none">

            <LinearLayout
                style="@style/Layout_Match_Match"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16">

                <TextView
                    style="@style/Layout_Wrap_Wrap"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginBottom="@dimen/dp16"
                    android:text="自动模式"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_auto_huoli"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/sl_bg_t100_btn"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_auto_huoli"
                            style="@style/Layout_Wrap_Wrap"
                            android:layout_gravity="center_horizontal"
                            android:text="活力"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_auto_huyao"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp16"
                        android:layout_weight="1"
                        android:background="@drawable/sl_bg_t100_btn"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_auto_huyao"
                            style="@style/Layout_Wrap_Wrap"
                            android:layout_gravity="center_horizontal"
                            android:text="护腰"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_auto_tuntui"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp16"
                        android:layout_weight="1"
                        android:background="@drawable/sl_bg_t100_btn"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_auto_tuntui"
                            style="@style/Layout_Wrap_Wrap"
                            android:layout_gravity="center_horizontal"
                            android:text="臀腿"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_auto_shuimian"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/sl_bg_t100_btn"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_auto_shuimian"
                            style="@style/Layout_Wrap_Wrap"
                            android:layout_gravity="center_horizontal"
                            android:text="睡眠"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp16"
                        android:layout_weight="1"
                        android:background="@drawable/sl_bg_t100_btn"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="invisible"></LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp16"
                        android:layout_weight="1"
                        android:background="@drawable/sl_bg_t100_btn"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="invisible"></LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/Layout_Wrap_Wrap"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp16"
                    android:text="颈部按摩"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_neckUp"
                            android:layout_width="@dimen/dp50"
                            android:layout_height="@dimen/dp50"
                            android:background="@drawable/sl_bg_t100_btn2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_neckUp"
                                android:layout_width="@dimen/dp30"
                                android:layout_height="@dimen/dp30"
                                android:src="@mipmap/icon_neck_up" />
                        </LinearLayout>

                        <TextView
                            style="@style/Layout_Wrap_Wrap"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp6"
                            android:maxLines="1"
                            android:text="向上调节"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp11" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_neckDown"
                            android:layout_width="@dimen/dp50"
                            android:layout_height="@dimen/dp50"
                            android:background="@drawable/sl_bg_t100_btn2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_neckDown"
                                android:layout_width="@dimen/dp30"
                                android:layout_height="@dimen/dp30"
                                android:src="@mipmap/icon_neck_down" />
                        </LinearLayout>

                        <TextView
                            style="@style/Layout_Wrap_Wrap"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp6"
                            android:maxLines="1"
                            android:text="向下调节"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp11" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_neckPositive"
                            android:layout_width="@dimen/dp50"
                            android:layout_height="@dimen/dp50"
                            android:background="@drawable/sl_bg_t100_btn2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_neckPositive"
                                android:layout_width="@dimen/dp30"
                                android:layout_height="@dimen/dp30"
                                android:src="@mipmap/icon_neck_positive" />
                        </LinearLayout>

                        <TextView
                            style="@style/Layout_Wrap_Wrap"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp6"
                            android:maxLines="1"
                            android:text="正按摩"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp11" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_neckNegative"
                            android:layout_width="@dimen/dp50"
                            android:layout_height="@dimen/dp50"
                            android:background="@drawable/sl_bg_t100_btn2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_neckNegative"
                                android:layout_width="@dimen/dp30"
                                android:layout_height="@dimen/dp30"
                                android:src="@mipmap/icon_neck_negative" />
                        </LinearLayout>

                        <TextView
                            style="@style/Layout_Wrap_Wrap"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp6"
                            android:maxLines="1"
                            android:text="反按摩"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp11" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/Layout_Wrap_Wrap"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp16"
                    android:text="背部按摩"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_backUp"
                            android:layout_width="@dimen/dp50"
                            android:layout_height="@dimen/dp50"
                            android:background="@drawable/sl_bg_t100_btn2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_backUp"
                                android:layout_width="@dimen/dp30"
                                android:layout_height="@dimen/dp30"
                                android:src="@mipmap/icon_back_up" />
                        </LinearLayout>

                        <TextView
                            style="@style/Layout_Wrap_Wrap"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp6"
                            android:maxLines="1"
                            android:text="上背按摩"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp11" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_backAll"
                            android:layout_width="@dimen/dp50"
                            android:layout_height="@dimen/dp50"
                            android:background="@drawable/sl_bg_t100_btn2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_backAll"
                                android:layout_width="@dimen/dp30"
                                android:layout_height="@dimen/dp30"
                                android:src="@mipmap/icon_back_all" />
                        </LinearLayout>

                        <TextView
                            style="@style/Layout_Wrap_Wrap"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp6"
                            android:maxLines="1"
                            android:text="全部按摩"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp11" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_backDown"
                            android:layout_width="@dimen/dp50"
                            android:layout_height="@dimen/dp50"
                            android:background="@drawable/sl_bg_t100_btn2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_backDown"
                                android:layout_width="@dimen/dp30"
                                android:layout_height="@dimen/dp30"
                                android:src="@mipmap/icon_back_down" />
                        </LinearLayout>

                        <TextView
                            style="@style/Layout_Wrap_Wrap"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp6"
                            android:maxLines="1"
                            android:text="下背按摩"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp11" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/Layout_Wrap_Wrap"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp16"
                    android:text="气压强度"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_airLow"
                            android:layout_width="@dimen/dp50"
                            android:layout_height="@dimen/dp50"
                            android:background="@drawable/sl_bg_t100_btn2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Layout_Wrap_Wrap"
                                android:layout_gravity="center_horizontal"
                                android:text="低"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp12"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_airMid"
                            android:layout_width="@dimen/dp50"
                            android:layout_height="@dimen/dp50"
                            android:background="@drawable/sl_bg_t100_btn2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Layout_Wrap_Wrap"
                                android:layout_gravity="center_horizontal"
                                android:text="中"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp12"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_airHigh"
                            android:layout_width="@dimen/dp50"
                            android:layout_height="@dimen/dp50"
                            android:background="@drawable/sl_bg_t100_btn2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Layout_Wrap_Wrap"
                                android:layout_gravity="center_horizontal"
                                android:text="高"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp12"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp26"
                    android:background="@drawable/bg_t100_line"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp16">

                    <TextView
                        style="@style/Layout_Wrap_Wrap"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp16"
                        android:layout_marginBottom="@dimen/dp16"
                        android:text="辅助功能"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp15"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp16"
                        android:layout_marginRight="@dimen/dp16"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_heat"
                                android:layout_width="@dimen/dp50"
                                android:layout_height="@dimen/dp50"
                                android:background="@drawable/sl_bg_t100_btn2"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_heat"
                                    android:layout_width="@dimen/dp30"
                                    android:layout_height="@dimen/dp30"
                                    android:src="@mipmap/icon_heat" />
                            </LinearLayout>

                            <TextView
                                style="@style/Layout_Wrap_Wrap"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp6"
                                android:maxLines="1"
                                android:text="颈背加热"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp11" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_spot"
                                android:layout_width="@dimen/dp50"
                                android:layout_height="@dimen/dp50"
                                android:background="@drawable/sl_bg_t100_btn2"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_spot"
                                    android:layout_width="@dimen/dp30"
                                    android:layout_height="@dimen/dp30"
                                    android:src="@mipmap/icon_spot" />
                            </LinearLayout>

                            <TextView
                                style="@style/Layout_Wrap_Wrap"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp6"
                                android:maxLines="1"
                                android:text="区域定点按摩"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp11" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/device_detail_more_function2_ll_new"
                    android:visibility="gone">

                    <com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView
                        android:id="@+id/rl_more_func_back_up"
                        style="@style/device_detail_more_function2_rl_left_new">

                        <ImageView
                            android:id="@+id/iv_device_detail_more_func_back_up"
                            style="@style/device_detail_more_function1_iv_add" />

                        <TextView
                            style="@style/device_detail_more_function2_rl_tv_left"
                            android:layout_toRightOf="@+id/iv_device_detail_more_func_back_up"
                            android:text="靠背升" />

                    </com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView>

                    <com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView
                        android:id="@+id/rl_more_func_back_down"
                        style="@style/device_detail_more_function2_rl_right_new">

                        <ImageView
                            android:id="@+id/iv_device_detail_more_func_back_down"
                            style="@style/device_detail_more_function1_iv_minus" />

                        <TextView
                            style="@style/device_detail_more_function2_rl_tv_right"
                            android:layout_toLeftOf="@+id/iv_device_detail_more_func_back_down"
                            android:text="靠背降" />
                    </com.ypcxpt.fish.library.ui.fuction.LongClickDeviceItemView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>