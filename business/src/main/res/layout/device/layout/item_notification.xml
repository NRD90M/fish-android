<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp16"
    android:layout_marginTop="@dimen/dp10"
    android:layout_marginRight="@dimen/dp16"
    android:background="@color/white"
    android:padding="@dimen/dp10">

    <TextView
        android:id="@+id/tv_titleName"
        style="@style/Layout_Match_Wrap"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="标题"
        android:textColor="@color/common_2f2f2f"
        android:textSize="@dimen/sp15" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/tv_titleName"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/common_FAFAFA" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/Layout_Match_Wrap"
        android:layout_below="@+id/view_line"
        android:layout_marginTop="@dimen/dp5"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="内容"
        android:textColor="@color/common_555555"
        android:textSize="@dimen/sp13" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/Layout_Wrap_Wrap"
        android:layout_below="@+id/tv_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp5"
        android:text="发布于3小时前"
        android:textColor="@color/common_555555"
        android:textSize="@dimen/sp10" />

    <ImageView
        android:id="@+id/iv_read"
        android:layout_width="@dimen/dp8"
        android:layout_height="@dimen/dp8"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_cycle01" />
</RelativeLayout>
