<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_F1F3F4"
    android:orientation="vertical">

    <com.ypcxpt.fish.app.util.VpSwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_header"
                style="@style/main_page_header"
                android:layout_height="wrap_content">

                <RelativeLayout
                    style="@style/main_page_header_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingRight="@dimen/dp18">

                    <LinearLayout
                        style="@style/Layout_Wrap_Wrap"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp35"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/ll_main_temp"
                            style="@style/Layout_Wrap_Wrap"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_weather"
                                android:layout_width="@dimen/dp39"
                                android:layout_height="@dimen/dp39"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/dp5"
                                android:scaleType="fitXY"
                                tools:src="@mipmap/forecast_icon_sunnny" />

                            <TextView
                                android:id="@+id/tv_curr_temp"
                                style="@style/Layout_Wrap_Wrap"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/dp5"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/sp39"
                                tools:text="25°" />

                            <TextView
                                android:id="@+id/tv_weather_info"
                                style="@style/Layout_Wrap_Wrap"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="@dimen/dp3"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/sp13"
                                tools:text="多云" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_secondary_weather_collection"
                            style="@style/Layout_Wrap_Wrap"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp5"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp14"
                            tools:text="23°~29°  西南风 三级" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_location"
                        style="@style/Layout_Wrap_Wrap"
                        android:layout_marginTop="5dp"
                        android:drawableLeft="@mipmap/icon_home"
                        android:drawablePadding="@dimen/dp10"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp15"
                        tools:text="我的家" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_location"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp20"
                        android:paddingBottom="@dimen/dp35">

                        <TextView
                            android:id="@+id/tv_timeStatus"
                            style="@style/Layout_Wrap_Wrap"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp28"
                            android:textStyle="bold"
                            tools:text="晚上好" />

                        <TextView
                            android:id="@+id/tv_desc"
                            style="@style/Layout_Wrap_Wrap"
                            android:layout_marginTop="@dimen/dp5"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp16"
                            tools:text="累了吧！使用按摩椅休息一下吧！" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_main_add"
                        android:layout_width="@dimen/dp35"
                        android:layout_height="@dimen/dp35"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/dp5"
                        android:src="@mipmap/icon_main_add"
                        android:visibility="visible" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_header"
                android:orientation="vertical">

                <com.ms.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp88"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    app:indicator_drawable_selected="@color/bg_device_detail_top"
                    app:indicator_drawable_unselected="@color/common_D8D8D8" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp0" />
            </LinearLayout>
        </RelativeLayout>
    </com.ypcxpt.fish.app.util.VpSwipeRefreshLayout>
</RelativeLayout>