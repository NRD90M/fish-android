<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_F1F3F4"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical">

    <include layout="@layout/include_common_title" />

    <ScrollView style="@style/Layout_Match_Match">

        <LinearLayout
            style="@style/Layout_Match_Match"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp16"
                android:text="时间"
                android:textColor="@color/common_a1a1a1"
                android:textSize="@dimen/sp15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                android:background="@drawable/bg_common_white"
                android:orientation="vertical"
                android:padding="@dimen/dp12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择连续天数"
                    android:textColor="@color/common_a1a1a1"
                    android:textSize="@dimen/sp12" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp12"
                    android:layout_marginBottom="@dimen/dp12">

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="@dimen/dp70"
                        android:layout_height="@dimen/dp70"
                        android:background="@drawable/bg_cycle01"
                        android:gravity="center"
                        android:text="每天"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_week"
                        android:layout_width="@dimen/dp70"
                        android:layout_height="@dimen/dp70"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_cycle"
                        android:gravity="center"
                        android:text="每周"
                        android:textColor="@color/common_838486" />

                    <TextView
                        android:id="@+id/tv_month"
                        android:layout_width="@dimen/dp70"
                        android:layout_height="@dimen/dp70"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_cycle"
                        android:gravity="center"
                        android:text="每月"
                        android:textColor="@color/common_838486" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_select_wm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp46"
                    android:visibility="gone">
                    <View
                        style="@style/divider_05" />

                    <TextView
                        android:id="@+id/tv_wm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="每周"
                        android:textColor="@color/common_141515"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_timeParent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp8"
                        android:layout_toLeftOf="@+id/iv_arrow"
                        android:text="周一"
                        android:textColor="@color/common_838486"
                        android:textSize="@dimen/sp14" />

                    <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="@dimen/dp9"
                        android:layout_height="@dimen/dp18"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_arrow" />
                </RelativeLayout>

                <View style="@style/divider_05" />

                <RelativeLayout
                    android:id="@+id/rl_select_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp46">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="请选择时间"
                        android:textColor="@color/common_141515"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp8"
                        android:layout_toLeftOf="@+id/iv_arrow2"
                        android:text="10:05"
                        android:textColor="@color/common_838486"
                        android:textSize="@dimen/sp14" />

                    <ImageView
                        android:id="@+id/iv_arrow2"
                        android:layout_width="@dimen/dp9"
                        android:layout_height="@dimen/dp18"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_arrow" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp16"
                android:text="设备"
                android:textColor="@color/common_a1a1a1"
                android:textSize="@dimen/sp15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                android:background="@drawable/bg_common_white"
                android:orientation="vertical"
                android:padding="@dimen/dp12">

                <RelativeLayout
                    android:id="@+id/rl_select_io"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp46">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="选择设备"
                        android:textColor="@color/common_141515"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp8"
                        android:layout_toLeftOf="@+id/iv_arrow3"
                        android:text="投喂机"
                        android:textColor="@color/common_838486"
                        android:textSize="@dimen/sp14" />

                    <ImageView
                        android:id="@+id/iv_arrow3"
                        android:layout_width="@dimen/dp9"
                        android:layout_height="@dimen/dp18"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_arrow" />
                </RelativeLayout>

                <View style="@style/divider_05" />

                <RelativeLayout
                    android:id="@+id/rl_feeder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp80">

                    <TextView
                        android:id="@+id/tv_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="克数(克)"
                        android:textColor="@color/common_141515"
                        android:textSize="@dimen/sp14" />

                    <EditText
                        android:id="@+id/et_feeder"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:layout_toRightOf="@+id/tv_txt"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_line_grey"
                        android:gravity="left|center_vertical"
                        android:hint="请输入投喂量"
                        android:padding="@dimen/dp8"
                        android:textColor="@color/common_141515"
                        android:textSize="@dimen/sp13" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_duration"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp80"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="时长"
                        android:textColor="@color/common_141515"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp8"
                        android:layout_toLeftOf="@+id/iv_arrow4"
                        android:text="2小时5分钟0秒"
                        android:textColor="@color/common_838486"
                        android:textSize="@dimen/sp14" />

                    <ImageView
                        android:id="@+id/iv_arrow4"
                        android:layout_width="@dimen/dp9"
                        android:layout_height="@dimen/dp18"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_arrow" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp30"
                android:layout_marginRight="@dimen/dp20"
                android:background="@drawable/sl_bg_login_btn"
                android:gravity="center"
                android:paddingTop="@dimen/dp8"
                android:paddingBottom="@dimen/dp8"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>